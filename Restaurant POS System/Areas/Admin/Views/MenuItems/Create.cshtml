@model Restaurant_POS_System.Models.MenuItem

@{
    ViewData["Title"] = "Create";
}

<div id="menu-item-create-container">
    <div class="menu-item-card">
        <h4 class="menu-item-title">Create Menu Item</h4>
        <form class="menu-item-form" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="menu-item-row">
         
                <div class="menu-item-left">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                        </label>
                    </div>

                    <div class="form-group">
                        <label asp-for="Quantity"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label for="imageFile">Image</label>
                        <input type="file" id="imageFile" name="imageFile" class="form-control" onchange="showPreview(event)" />
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                </div>

              
                <div class="menu-item-right">
                    <div class="image-preview">
                        <p><strong>Image Preview:</strong></p>
                        <img id="imagePreview" src="https://via.placeholder.com/150" alt="Selected image preview" style="max-width: 100px;" />
                    </div>

                    <div class="form-group">
                        <label asp-for="QuantityType"></label>
                        <select asp-for="QuantityType" class="form-control"
                                asp-items="@(new SelectList(Enum.GetValues(typeof(Restaurant_POS_System.Models.QuantityType))))">
                            <option value="">-- Select Quantity Type --</option>
                        </select>
                        <span asp-validation-for="QuantityType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Discount"></label>
                        <input asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DiscountPrice"></label>
                        <input asp-for="DiscountPrice" class="form-control" />
                        <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>

        
            <div class="menu-item-buttons">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function showPreview(event) {
            const input = event.target;
            const preview = document.getElementById("imagePreview");

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>

  
}
