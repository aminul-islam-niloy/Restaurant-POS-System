@model Restaurant_POS_System.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg" style="width: 30rem; padding: 20px;">
        <div class="card-body text-center">

            <h4 class="card-title text-danger">Delete Category</h4>
            <p class="card-text text-muted">Are you sure you want to delete this menu category?</p>
            <hr />

            <dl class="row mb-4">
                <dt class="col-sm-4 text-start">
                    <strong>Category Name:</strong>
                </dt>
                <dd class="col-sm-8 text-start">
                    <h5 class="text-primary">@Model.CategoryName</h5>
                </dd>
            </dl>

   
            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="CategoryId" />

                <!-- Action Buttons -->
                <div class="d-flex justify-content-center gap-2">
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
